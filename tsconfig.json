
{
  "compilerOptions": {
    // Default
    "target": "ES2015", 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": true, 
    "skipLibCheck": true,
    "lib": ["ES2015", "DOM"],

    // Added
    "jsx": "react-jsx", 
    "module": "ESNext",  
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
  },
  "include": ["src", "src/types/assets.d.ts"]
}